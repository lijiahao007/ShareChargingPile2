<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading"
            style="@style/TextView.Heading"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="@string/book_pile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            android:src="@drawable/ic_close_primary_24dp"
            app:layout_constraintBottom_toBottomOf="@id/heading"
            app:layout_constraintLeft_toLeftOf="@id/heading"
            app:layout_constraintTop_toTopOf="@id/heading" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/user_info_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/user_info_background"
                android:orientation="vertical"
                tools:context=".ui.mapModule.BookPileFragment">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/charging_station_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_text_view_height"
                            android:gravity="center_vertical|start"
                            android:text="@string/station_info_1"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/user_info_background" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_text_view_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/station_name" />

                            <TextView
                                android:id="@+id/it_station_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                tools:text="共享充电站" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_text_view_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/park_fee" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="end|center_vertical"
                                    android:text="@string/money_unit" />

                                <TextView
                                    android:id="@+id/tv_station_park_fee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="end|center_vertical"
                                    tools:text="10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="end|center_vertical"
                                    android:text="@string/yuan_per_hour" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/order_text_view_height"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/share_time" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/open_time_linear_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="end"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/order_text_view_height"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_open_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/order_text_view_height"
                                            android:gravity="end|center_vertical"
                                            tools:text="08:00~11:00" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="end"
                                            android:orientation="horizontal"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="0dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="end|center_vertical"
                                                android:text="@string/money_unit" />

                                            <TextView
                                                android:id="@+id/tv_current_electric_fee"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="end|center_vertical"
                                                tools:text="1.0" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="end|center_vertical"
                                                android:text="@string/per_degree" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/order_text_view_height"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_open_time1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/order_text_view_height"
                                            android:gravity="end|center_vertical"
                                            tools:text="14:00~18:00" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="end"
                                            android:orientation="horizontal"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="0dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="end|center_vertical"
                                                android:text="@string/money_unit" />

                                            <TextView
                                                android:id="@+id/tv_current_electric_fee1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="end|center_vertical"
                                                tools:text="0.8" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="end|center_vertical"
                                                android:text="@string/per_degree" />
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_to_choose_pile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="选择预约充电桩 > "
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </com.google.android.material.card.MaterialCardView>



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/charging_pile_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/charging_station_info">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_text_view_height"
                            android:gravity="center_vertical|start"
                            android:text="@string/charging_pile_info"
                            android:textSize="17sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/user_info_background" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_text_view_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/pile_cur_state" />

                            <TextView
                                android:id="@+id/tv_pile_state"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                tools:text="空闲" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_text_view_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/electric_type" />

                            <TextView
                                android:id="@+id/tv_electric_type"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                tools:text="交流" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/order_text_view_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/charging_power_rate" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_power_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="end|center_vertical"
                                    tools:text="10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="end|center_vertical"
                                    android:text="@string/kwh" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


                <!--            显示该充电桩各个时间段情况。 用GridLayout-->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_choose_book_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp">

                        <GridLayout
                            android:id="@+id/time_table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@color/white"
                            android:columnCount="8"
                            android:orientation="vertical"
                            android:rowCount="4">

                            <!--                第一行-->
                            <TextView
                                android:id="@+id/date_range"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnSpan="8"
                                android:layout_gravity="center_horizontal"
                                android:textSize="18sp"
                                tools:text="5月2日~5月8日" />


                            <!--                第二行-->


                            <TextView
                                android:id="@+id/day1"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="@string/one"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/day2"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="1"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="二"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/day3"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="1"
                                android:layout_column="3"
                                android:layout_columnWeight="1"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="三"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/day4"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="1"
                                android:layout_column="4"
                                android:layout_columnWeight="1"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="四"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/day5"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="1"
                                android:layout_column="5"
                                android:layout_columnWeight="1"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="五"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/day6"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="1"
                                android:layout_column="6"
                                android:layout_columnWeight="1"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="六"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/day7"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="1"
                                android:layout_column="7"
                                android:layout_columnWeight="1"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="日"
                                android:textSize="18sp" />


                            <!--               第三行 -->
                            <RelativeLayout
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_gravity="center|fill"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_begin_time"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:gravity="center_horizontal"
                                    android:text="00:00" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:layout_above="@+id/tv_end_time"
                                    android:layout_below="@id/tv_begin_time"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_arrow_down_1" />

                                <TextView
                                    android:id="@+id/tv_end_time"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_horizontal"
                                    android:text="23:59" />
                            </RelativeLayout>


                            <com.lijiahao.sharechargingpile2.ui.view.TimeBarLinearLayout
                                android:id="@+id/day1_time_bar"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="2"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/book_time_margin" />

                            <com.lijiahao.sharechargingpile2.ui.view.TimeBarLinearLayout
                                android:id="@+id/day2_time_bar"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/book_time_margin" />

                            <com.lijiahao.sharechargingpile2.ui.view.TimeBarLinearLayout
                                android:id="@+id/day3_time_bar"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="2dp" />

                            <com.lijiahao.sharechargingpile2.ui.view.TimeBarLinearLayout
                                android:id="@+id/day4_time_bar"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="@dimen/book_time_margin"

                                />

                            <com.lijiahao.sharechargingpile2.ui.view.TimeBarLinearLayout
                                android:id="@+id/day5_time_bar"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/book_time_margin" />

                            <com.lijiahao.sharechargingpile2.ui.view.TimeBarLinearLayout
                                android:id="@+id/day6_time_bar"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/book_time_margin" />

                            <com.lijiahao.sharechargingpile2.ui.view.TimeBarLinearLayout
                                android:id="@+id/day7_time_bar"
                                android:layout_width="@dimen/book_time_column_width"
                                android:layout_row="2"
                                android:layout_column="7"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="@dimen/book_time_margin" />


                            <!-- 横边框-->
                            <View
                                android:layout_height="1dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnSpan="8"
                                android:layout_gravity="bottom|fill_horizontal"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnSpan="8"
                                android:layout_gravity="bottom|fill_horizontal"
                                android:layout_marginBottom="2dp"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_height="1dp"
                                android:layout_row="3"
                                android:layout_column="0"
                                android:layout_columnSpan="8"
                                android:layout_gravity="bottom|fill_horizontal"
                                android:background="@color/user_info_background" />


                            <!-- 竖边框-->
                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="0"
                                android:layout_gravity="start|fill_vertical"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="0"
                                android:layout_gravity="end|fill_vertical"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="1"
                                android:layout_gravity="fill_vertical|end"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="2"
                                android:layout_gravity="fill_vertical|end"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="3"
                                android:layout_gravity="fill_vertical|end"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="4"
                                android:layout_gravity="fill_vertical|end"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="5"
                                android:layout_gravity="fill_vertical|end"
                                android:background="@color/user_info_background" />

                            <View
                                android:layout_width="1dp"
                                android:layout_row="1"
                                android:layout_rowSpan="2"
                                android:layout_column="6"
                                android:layout_gravity="fill_vertical|end"
                                android:background="@color/user_info_background" />

                            <View
